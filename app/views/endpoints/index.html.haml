.col-md-12
  .row
    .col-md-12
      - if flash[:notice]
        .alert.alert-success
          %a.close{"aria-label" => "close", "data-dismiss" => "alert", :href => "#"} Ã—
          %strong= flash[:notice]

  .row
    .col-md-12.text-center
      %h1 Listing Endpoints
    .col-md-8.col-md-offset-2
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Expires at
            %th

        %tbody
          - @endpoints.each do |endpoint|
            %tr
              %td= endpoint.name
              /FIXME use presenters
              %td= endpoint.downtime_alert? ? Time.at(endpoint.expires_at) : 'Event-based'
              %td= link_to "Edit", edit_endpoint_path(endpoint)
      .row
        .col-md-2.col-md-offset-10
          = link_to 'New Endpoint', new_endpoint_path, class: "btn btn-success"
